@model MeetingInfo
@{
    ViewData["Title"] = "Home";
}

<h1 class="h4">@ViewBag.timeResult , @ViewBag.Username</h1>
<p>Toplantı katılım durumunuzu bildiriniz</p>

<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH/mm/ss")</li>
        <li class="list-group-item">@Model.NumberofPeople Katılımcı mevcut.</li>
    </ul>
</div>
<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Katılım Durumunu Bildir</a>